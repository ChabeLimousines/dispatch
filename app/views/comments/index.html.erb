<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="thumbnail">
        <p>Tags:
          <%= link_to 'All', root_path %>
          <% tag_cloud Comment.tag_counts, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
        </p>
      </div>
      <div class="thumbnail">
        <p>Auteurs:
          <%= link_to 'All', root_path %>
          <% tag_cloud Comment.author_counts, %w[s m l] do |tag, css_class| %>
            <%= link_to tag.name, tag_path(tag.name), class: css_class %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% @comments.each do |comment| %>
        <div class="thumbnail">
          <blockquote>
            <p><%= comment.content %></p>
            <p>Tag: <%= comment.tag_list %></p>
            <footer>Submited <%= time_ago_in_words(comment.created_at) %> by: <%= comment.author_list %></footer>
          </blockquote>
        </div>
      <% end %>
    </div>
  </div>
</div>
